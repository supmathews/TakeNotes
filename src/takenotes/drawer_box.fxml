<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="270.0" prefWidth="180.0" style="-fx-background-color: #CFCDD7;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="takenotes.Drawer_box">
   <children>
      <ImageView fitHeight="174.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../ImageResource/smiley_PNG74.png" />
         </image>
      </ImageView>
      <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="181.0" style="-fx-background-color: #5B5A62;" text="ACCOUNT" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="181.0" style="-fx-background-color: #5B5A62;" text="MY NOTES" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleClose" prefHeight="26.0" prefWidth="181.0" style="-fx-background-color: #5B5A62;" text="EXIT :(" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
